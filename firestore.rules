rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Posts collection - endast Cloud Functions kan skriva, alla kan l채sa
    match /posts/{postId} {
      allow read: if true;  // Alla kan l채sa posts
      allow write: if false; // Endast Cloud Functions kan skriva (via service account)
    }
    
    // Tutorials collection - endast Cloud Functions kan skriva, alla kan l채sa
    match /tutorials/{tutorialId} {
      allow read: if true;  // Alla kan l채sa tutorials
      allow write: if false; // Endast Cloud Functions kan skriva (via service account)
    }
  }
}
